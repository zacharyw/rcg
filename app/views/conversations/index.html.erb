<div class="row">
  <% if user_signed_in? %>
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
      <div class="panel panel-primary">
        <%= form_for @new_conversation, as: :conversation, url: { action: 'create' } do |f| %>
          <div class="panel-body">
            <div contenteditable="true" id="editable-body">
              <%= @new_conversation.default_body %>
            </div>
            <%= f.text_area :body, class: 'hidden' %>
          </div>
          <div class="panel-footer clearfix">
            <%= f.submit('Post', class: 'btn btn-success pull-right', id: 'new-conversation-submit') %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
  <% @conversations.each do |conversation| %>
    <%= render partial: 'topic', locals: {conversation: ConversationPresenter.new(conversation)} %>
  <% end %>
</div>
