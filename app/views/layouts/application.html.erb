<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>RCG</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-inverse navbar-static-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to 'RCG', root_url, class: "navbar-brand" %>
      </div>
      <div class="collape navbar-collapse">
          <% if user_signed_in? %>
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  <%= current_user.username %> <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Profile', edit_user_registration_path(current_user) %></li>
                  <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
                </ul>
              </li>
            </ul>
          <% else %>
            <%= link_to 'Login', new_user_session_path, class: "btn btn-default navbar-btn", type: "button" %>
            <%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-primary navbar-btn", type: "button" %>
          <% end %>
      </div>
    </div>
  </nav>
    <div class="container-fluid">
      <div class="row-fluid">
        <% if notice %>
          <p class="alert alert-info"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
